@page "/configure-election"
@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization

@inject NavigationManager NavigationManager
@rendermode InteractiveWebAssembly
<link href="buttonsMenu.css" rel="stylesheet" />
<link href="forms.css" rel="stylesheet" />

<CascadingAuthenticationState>
    <AuthorizeView Roles="Pracownicy PKW, Administratorzy" Context="authContext">
         <Authorized>

<div class="page-content">
    <h1>KONFIGURACJA WYBORÓW</h1>
    <div class="button-container">
        <a class="config-button config-button-green" @onclick="Add">ZAREJESTRUJ WYBORY</a>
        <a class="config-button config-button-blue" @onclick="Modify">MODYFIKUJ WYBORY</a>
        <a class="config-button config-button-red" @onclick="Delete">USUŃ WYBORY</a>
    </div>
</div>
                     </Authorized>
        <NotAuthorized>
            <div class="not-authorized-container">
                <img src="images/WarningIcon.png" alt="Alert Icon" class="alert-icon" />
                <p class="not-authorized-message">Nie posiadasz odpowiednich uprawnień do wyświetlenia tej strony</p>
                <img src="images/WarningIcon.png" alt="Alert Icon" class="alert-icon" />
            </div>
        </NotAuthorized>
    </AuthorizeView>
</CascadingAuthenticationState>
@code{
    private void Add()
    {
        NavigationManager.NavigateTo("/add-election");
    }

    private void Modify()
    {
        NavigationManager.NavigateTo("/modify-election");
    }

    private void Delete()
    {
        NavigationManager.NavigateTo("/delete-election");
    }
}