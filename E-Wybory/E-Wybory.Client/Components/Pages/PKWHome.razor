@page "/pkwhome"
@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization

<link href="forms.css" rel="stylesheet" />

<CascadingAuthenticationState>
    <AuthorizeView Roles="Pracownicy PKW, Administratorzy" Context="authContext">
         <Authorized>

            <div class="page-content">
                <a href="/info" class="button-informator">
                    <div class="informator-wyborczy">Informator Wyborczy</div>
                </a>
            
                <a href="/candidateinfo" class="button-kandydaci">
                    <div class="text-wrapper">Kandydaci</div>
                </a>
            
                <a href="/statistics" class="button-statystyki">
                    <div class="div">Statystyki</div>
                </a>
            
                <a href="/candidatelist" class="button-conf">
                    <div class="overlap-group">
                        <div class="text-wrapper-2">Konfiguruj kandydata</div>
                    </div>
                </a>
            
                <a href="/committeelist" class="button-conf-party">
                    <div class="text-wrapper-3">Konfiguruj komitet</div>
                </a>
            
                <a href="/districtlist" class="button-conf-district">
                    <div class="text-wrapper-3">Konfiguruj obwód</div>
                </a>
            
                <a href="/constituencylist" class="div-wrapper">
                    <div class="text-wrapper-3">Konfiguruj okręg</div>
                </a>
            
                <a href="/verify" class="button-conf-info">
                    <div class="overlap">
                        <div class="text-wrapper-2">Głosuj</div>
                    </div>
                </a>
            
                <a href="/configure-election" class="button-conf-election">
                    <div class="text-wrapper-3">Konfiguruj wybory</div>
                </a>
            </div>

        </Authorized>
        <NotAuthorized>
            <div class="not-authorized-container">
                <img src="images/WarningIcon.png" alt="Alert Icon" class="alert-icon" />
                <p class="not-authorized-message">Nie posiadasz odpowiednich uprawnień do wyświetlenia tej strony</p>
                <img src="images/WarningIcon.png" alt="Alert Icon" class="alert-icon" />
            </div>
        </NotAuthorized>
    </AuthorizeView>
</CascadingAuthenticationState>
