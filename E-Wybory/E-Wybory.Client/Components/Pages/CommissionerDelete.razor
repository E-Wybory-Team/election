@page "/delete-commissioner"
@using System.ComponentModel.DataAnnotations
<link href="forms.css" rel="stylesheet" />

<div class="form-container">
    <h1>USUWANIE CZŁONKÓW KOMISJI Z OBWODU</h1>
    <EditForm Model="@committeeMemberModel" OnValidSubmit="HandleAddSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="form-group">
            <label for="pesel">PESEL CZŁONKA KOMISJI</label>
            <InputText @bind-Value="committeeMemberModel.Pesel" id="pesel" class="form-input" placeholder="`Nr Pesel członka komisji" />
        </div>
        <div class="form-group">
            <label for="wojewodztwo">WOJEWÓDZTWO</label>
            <InputSelect @bind-Value="committeeMemberModel.Wojewodztwo" id="wojewodztwo" class="form-select">
                <option value="" disabled selected>Wybierz województwo</option>
            </InputSelect>
        </div>
        <div class="form-group">
            <label for="powiat">POWIAT</label>
            <InputSelect @bind-Value="committeeMemberModel.Powiat" id="powiat" class="form-select">
                <option value="" disabled selected>Wybierz powiat</option>
            </InputSelect>
        </div>
        <div class="form-group">
            <label for="gmina">GMINA</label>
            <InputSelect @bind-Value="committeeMemberModel.Gmina" id="gmina" class="form-select">
                <option value="" disabled selected>Wybierz gminę</option>
            </InputSelect>
        </div>
        <div class="form-group">
            <label for="numer-obwodu">NUMER OBWODU</label>
            <InputSelect @bind-Value="committeeMemberModel.NumerObwodu" id="numer-obwodu" class="form-select">
                <option value="" disabled selected>Wybierz numer obwodu</option>
            </InputSelect>
        </div>
        <div class="form-group">
            <label for="stopien">STOPIEŃ</label>
            <InputSelect @bind-Value="committeeMemberModel.Stopien" id="stopien" class="form-select">
                <option value="" disabled selected>Wybierz stopień członkostwa w komisji</option>
            </InputSelect>
        </div>

        <div class="button-group">
            <button type="submit" class="submit-button">DODAJ</button>
            <button type="button" class="cancel-button">ANULUJ</button>
        </div>
    </EditForm>
</div>

@code {
    private CommitteeMemberModel committeeMemberModel = new CommitteeMemberModel();

    private void HandleAddSubmit()
    {
        Console.WriteLine($"Dodano członka komisji z PESEL: {committeeMemberModel.Pesel}");
    }

    public class CommitteeMemberModel
    {
        [Required(ErrorMessage = "PESEL jest wymagany.")]
        public string Pesel { get; set; }

        [Required(ErrorMessage = "Województwo jest wymagane.")]
        public string Wojewodztwo { get; set; }

        [Required(ErrorMessage = "Powiat jest wymagany.")]
        public string Powiat { get; set; }

        [Required(ErrorMessage = "Gmina jest wymagana.")]
        public string Gmina { get; set; }

        [Required(ErrorMessage = "Numer obwodu jest wymagany.")]
        public string NumerObwodu { get; set; }

        [Required(ErrorMessage = "Stopień członkostwa jest wymagany.")]
        public string Stopien { get; set; }
    }
}
